{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["src/app/config.ts"],
      "@components": ["src/app/components"],
      "@assets/*": ["src/assets/*"]
    },
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "server"]
}
